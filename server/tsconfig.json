{
  "extends": "@tsconfig/node18/tsconfig.json",
  "exclude": ["src/**/*.spec.ts", "tests/**/*.ts"],

  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "..",

    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",

    "experimentalDecorators": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "outDir": "dist",

    "types": ["vitest/globals"],
    "paths": {
      "@server/*": ["./src/*"],
      "@tests/*": ["tests/*"]
    }
  }
}
